{
  "name": "simplebandit",
  "version": "0.1.0",
  "description": "An npm library for contextual bandits",
  "main": "index.js",
  "scripts": {
    "format": "npx prettier --write .",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "jest",
    "build": "tsc && npx browserify index.ts -p [ tsify --noImplicitAny ] > simpleBandit.js && npx uglifyjs simpleBandit.js -o simpleBandit.min.js -c -m",
    "pretest": "tsc",
    "prepublish": "tsc"
  },
  "keywords": [
    "contextual bandits",
    "recommender",
    "bandit",
    "npm",
    "library"
  ],
  "author": "Oege Dijk",
  "license": "Apache-2.0",
  "directories": {
    "example": "examples"
  },
  "dependencies": {
    "simplebandit": "../simplebandit-js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "browserify": "^17.0.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "parcel-bundler": "^1.12.5",
    "prettier": "3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsify": "^5.0.4",
    "tslint": "^6.1.3",
    "typescript": "^5.2.2"
  }
}
